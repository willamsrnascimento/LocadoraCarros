@model IEnumerable<LocadoraCarros.Models.Conta>

@{
    ViewData["Title"] = "Saldos de Usuários";
}


<h5>@ViewData["Title"]</h5>

<div class="border border-light rounded shadow">
    <div class="container">
        <h3 class="titulo">
            <i class="fa fa-money fa-lg"></i> &nbsp; Saldos de Usuários &nbsp;
            <a asp-action="Create" class="btn btn-outline-secondary btn-lg" data-toggle="tooltip" data-placement="right" title="Novo Saldo"><i class="fa fa-plus-circle fa-lg"></i> </a>
        </h3>

        <table class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th scope="col">
                         @Html.DisplayNameFor(model => model.Usuario)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Saldo)
                    </th>
                    <th scope="col"> Opções </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario.UserName)
                        </td>
                        <td>
                            R$@Html.DisplayFor(modelItem => item.Saldo),00
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Atualizar Saldo"><i class="fa fa-edit"></i></a> 
                      
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<partial name="_ModalExclusao" />

@section Scripts{
    <script>
        $(function() {
            $('[data-toggle="tooltip"]').tooltip();
        })
    </script>
}