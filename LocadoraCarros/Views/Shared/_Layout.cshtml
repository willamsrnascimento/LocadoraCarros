<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LocadoraCarros</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker3.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-dark bg-info">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-action="Usuarios" asp-controller="Index"><i class="fa fa-car"></i> Aluguel de Carros</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link navbar-text text-white" asp-action="Registro" asp-controller="Usuarios"> Registro </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-text text-white" asp-action="Login" asp-controller="Usuarios"> Login </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-text text-white" asp-action="Index" asp-controller="Usuarios"> Meus Dados </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-text text-white" asp-action="Index" asp-controller="Carros"> Carros </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-text text-white" asp-action="Index" asp-controller="NiveisAcessos"> Níveis de Acesso </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-text text-white" asp-action="Index" asp-controller="Contas"> Saldo </a>
                        </li>
                    </ul>

                   

                </div>

                 <partial name="_LoginPartial" />
            </div>

        </nav>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="conteudo-principal">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - LocadoraCarros - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.5/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.br.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
